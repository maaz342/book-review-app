{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    
    },
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "typeRoots": ["./src/types", "./node_modules/@types"],

  "include": [
    "src/**/*"
, "src/index.ts"  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
